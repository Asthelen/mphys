{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true, // black on save
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always" // isort on save
        }
    },
    "flake8.args": ["--config", ".flake8"]
}
